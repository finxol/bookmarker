{
  "manifest_version": 2,
  "name": "Bookmarker",
  "version": "1.0.0",
  "description": "Quick bookmark extension for bookmarker.finxol.io",
  
  "permissions": [
    "activeTab",
    "https://bookmarker.finxol.io/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Bookmark this page",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "web_accessible_resources": [
    "popup.html"
  ]
}